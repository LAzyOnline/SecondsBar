<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dip"
    android:paddingRight="15dip">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="104dip"
        android:layout_height="24dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/message_time_bg"
        android:gravity="center"
        android:text="09月25日 14:36"
        android:textColor="#9f9f9f"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/message_item_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="12dip"
        android:text="消息"
        android:textColor="#08bb59"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toTopOf="@+id/v_content"
        />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="12dip"
        android:drawableRight="@mipmap/ic_arrow_right_gray"
        android:drawablePadding="6dip"
        android:gravity="center_vertical"
        android:text="查看详情"
        android:textColor="#757575"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintEnd_toEndOf="@+id/v_content"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_tips"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips"/>
</android.support.constraint.ConstraintLayout>